<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ilya.searcher.MainActivity"
    android:background="@color/colorAccent">

    <TextView
        android:text="Телефон"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_telephone"
        android:layout_alignBottom="@+id/editText_telephone"
        android:layout_alignStart="@+id/textView_name" />

    <TextView
        android:text="Имя"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:id="@+id/textView_name"
        android:layout_above="@+id/editText_telephone"
        android:layout_alignParentStart="true" />


    <Button
        android:text="Поиск"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_search"
        android:layout_alignBaseline="@+id/button_add"
        android:layout_alignBottom="@+id/button_add"
        android:layout_toEndOf="@+id/button_add"
        android:background="@android:color/holo_orange_light"
        android:textAllCaps="false"
        android:textColorHighlight="@android:color/holo_orange_dark"
        android:textSize="18sp" />

    <Button
        android:text="Добавить"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:id="@+id/button_add"
        android:layout_below="@+id/textView_telephone"
        android:background="@android:color/holo_orange_light"
        android:textAllCaps="false"
        android:textColorHighlight="@android:color/holo_orange_dark"
        android:textSize="18sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_name"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView_telephone"
        android:layout_marginTop="15dp"
        android:backgroundTint="@android:color/black" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_telephone"
        android:layout_below="@+id/editText_name"
        android:layout_alignStart="@+id/editText_name"
        android:backgroundTint="@android:color/black" />

    <Button
        android:text="Удалить"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_delete"
        android:background="@android:color/holo_orange_light"
        android:textAllCaps="false"
        android:textColorHighlight="@android:color/holo_orange_dark"
        android:textSize="18sp"
        android:layout_below="@+id/button_add"
        android:layout_alignParentStart="true" />

</RelativeLayout>
